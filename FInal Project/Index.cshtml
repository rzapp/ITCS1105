@model FinalProject.Models.HomeViewModel
<html lang="en">
<head>
    <meta charset="utf-8" />
    <script src="http://code.jquery.com/jquery-1.10.2.js" type="text/javascript"></script>
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/Styles/mobile.css" media="screen and (max-width:420px)" />
    <link rel="stylesheet" type="text/css" href="/Styles/button.css" media="all" />
    <link rel="stylesheet" type="text/css" href="/Styles/home.css" media="all and (min-width:421px)" />
    <script type="text/javascript" src="/Scripts/home.js"></script>
    <title>login session</title>
</head>

<body>
<div class="accountPage">
  
   <div class="header">
      <h1>Welcome to Lakeland Community College Student Services Online</h1>
      <p>Lakeland Community College recognizes students' rights to access personnal and  academic records in accordance with the Family Educational Rights and Privacy Act of 1974 (FERPA) as amended by Public Law 93-568</p>
   </div>
   
   <div class="user-content">

<div class="slide1 SLIDE" style="display: none">

    <div class="account-display">
       <div class="row">
         <div class="name"><span class="account-name">Account Name</span></div>
         <div class="value"><span class="account-output">-- acct output -- </span></div>
         <div class="update"></div>
       </div> 
        
       <div class="row first">
         <div class="name element-name"></div>
         <div class="value"><input class="user-text element-update-text" type="text" value="" /></div> 
         <div class="update element-update-button">Update</div>
       </div>
    </div>
      
    <hr />

	<div class="element-entry">
        <div class="row">         
          <div class="eName">Element Name</div>
          <div class="eValue"><input class="user-text element-name-text" type="text" value="" /></div>
        </div>
            
        <div class="row">         
          <div class="eName">Element Value</div>
          <div class="eValue"><input class="user-text element-value-text" type="text" value="" /></div>
        </div>

        <div class="row"> 
          <div class="error-message-element"></div>     
          <div class="eName"></div>
          <div class="eValue element-input-button">Add</div>
        </div>
    </div>
</div>               <!-- end of wrapper for 1st SLIDE element -->

<div class="slide2 SLIDE">
    <div class="login-entry">
        <div class="row">
          <div class="text-phone">Log In</div>
          <div class="spacer"></div>
          <div class="value">Username</div>
          <div class="input"><input class="user-text username-text" type="text" value="" /></div>
        </div> 

        <div class="row">
          <div class="text">Already have an account with us? Returning users may log in by entering their site username and password.</div>
          <div class="value">Password</div> 
          <div class="input"><input class="user-text password-text" type="text" value="" /></div>
        </div>
          
        <div class="row">
          <div class="spacer error-message-login"></div>
          <div class="value"></div> 
          <div class="input login-button">Log In</div>
        </div>
    </div>
      
    <hr />

    <div class="account-create">
        <div class="row">
          <div class="text-phone">Create New Account</div>         
          <div class="spacer"></div>
          <div class="value">Username</div>
          <div class="input"><input class="user-text new-username-text" type="text" value="" /></div>
        </div>

        <div class="row">
          <div class="text">New users, please create a new account by providing us with some basic information.</div>
          <div class="value">Password</div> 
          <div class="input"><input class="user-text new-password-text" type="text" value="" /></div>
        </div>
            
        <div class="row">         
          <div class="spacer"></div>
          <div class="value">E-Mail Address</div>
          <div class="input"><input class="user-text new-email-text" type="text" value="" /></div>
        </div>

        <div class="row">         
          <div class="spacer"></div>
          <div class="value">Repeat E-Mail</div>
          <div class="input"><input class="user-text new-email-confirm-text" type="text" value="" /></div>
        </div>

        <div class="row">         
          <div class="spacer error-message-create"></div>
          <div class="value"></div>
          <div class="input create-button">Create Account</div>
        </div>
    </div>
</div>            <!-- end of wrapper for 2nd SLIDE element -->
      </div>      <!-- end of user based content-->

   <div class="footer">
      <p>Lakeland Community College<br />7700 Clocktower Dr Kirtland, OH 44094</p>
   </div>
</div>   <!-- end of page wrapper-->

</body>
</html>
